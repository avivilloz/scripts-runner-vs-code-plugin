{
    "publisher": "avivilloz",
    "name": "scripts-runner",
    "displayName": "Scripts Runner",
    "description": "Execute scripts from git repositories with parameters",
    "version": "0.0.33",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/avivilloz/scripts-runner-vs-code-plugin.git"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "extensionKind": [
        "workspace",
        "ui"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "scripts-runner.refresh",
                "title": "Refresh Scripts",
                "icon": "$(refresh)"
            },
            {
                "command": "scripts-runner.search",
                "title": "Search Scripts",
                "icon": "$(search)"
            },
            {
                "command": "scripts-runner.filter",
                "title": "Filter Scripts",
                "icon": "$(filter)"
            },
            {
                "command": "scripts-runner.clearFilters",
                "title": "Clear Filters",
                "icon": "$(clear-all)"
            },
            {
                "command": "scripts-runner.settings",
                "title": "Settings",
                "icon": "$(gear)"
            },
            {
                "command": "scripts-runner.switchLayout",
                "title": "Switch Layout",
                "icon": "$(layout)"
            },
            {
                "command": "scripts-runner.togglePin",
                "title": "Toggle Pin"
            },
            {
                "command": "scripts-runner.togglePinnedView",
                "title": "Show Pinned",
                "icon": "$(pinned)"
            }
        ],
        "viewsContainers": {
            "panel": [
                {
                    "id": "scripts-runner",
                    "title": "Scripts",
                    "icon": "$(play)"
                }
            ]
        },
        "views": {
            "scripts-runner": [
                {
                    "type": "tree",
                    "id": "scriptsExplorerList",
                    "name": "Scripts",
                    "when": "scriptsRunner:viewType == 'list'"
                },
                {
                    "type": "webview",
                    "id": "scriptsExplorerCard",
                    "name": "Scripts",
                    "when": "scriptsRunner:viewType == 'card'"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "scripts-runner.clearFilters",
                    "when": "view =~ /scriptsExplorer(List|Card)/ && scriptsRunner.hasFilters",
                    "group": "navigation@1"
                },
                {
                    "command": "scripts-runner.filter",
                    "when": "view =~ /scriptsExplorer(List|Card)/",
                    "group": "navigation@2"
                },
                {
                    "command": "scripts-runner.search",
                    "when": "view =~ /scriptsExplorer(List|Card)/",
                    "group": "navigation@3"
                },
                {
                    "command": "scripts-runner.togglePinnedView",
                    "when": "view =~ /scriptsExplorer(List|Card)/",
                    "group": "navigation@4"
                },
                {
                    "command": "scripts-runner.refresh",
                    "when": "view =~ /scriptsExplorer(List|Card)/",
                    "group": "navigation@5"
                },
                {
                    "command": "scripts-runner.settings",
                    "when": "view =~ /scriptsExplorer(List|Card)/",
                    "group": "navigation@6"
                },
                {
                    "command": "scripts-runner.switchLayout",
                    "when": "view =~ /scriptsExplorer(List|Card)/",
                    "group": "navigation@7"
                }
            ]
        },
        "configuration": {
            "title": "Scripts Runner",
            "properties": {
                "scriptsRunner.sources": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "git",
                                    "local"
                                ],
                                "description": "Type of script source"
                            },
                            "name": {
                                "type": "string",
                                "description": "Display name for the source"
                            },
                            "url": {
                                "type": "string",
                                "description": "Git repository URL (required for git type)"
                            },
                            "branch": {
                                "type": "string",
                                "description": "Git branch name (optional for git type)"
                            },
                            "path": {
                                "type": "string",
                                "description": "Local filesystem path (required for local type)"
                            },
                            "scriptsPath": {
                                "type": "string",
                                "description": "Path to scripts directory within the repository"
                            },
                            "builtIn": {
                                "type": "boolean",
                                "description": "Indicates if this is a built-in source",
                                "default": false
                            }
                        }
                    },
                    "default": [],
                    "description": "Script sources configuration",
                    "editPresentation": "multilineJson",
                    "order": 1,
                    "markdownDescription": "Script sources configuration. Click [Manage Sources](command:scripts-runner.configureSource) to open the configuration UI.",
                    "scope": "machine-overridable"
                },
                "scriptsRunner.fileExtensions": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "extension",
                            "system",
                            "command"
                        ],
                        "properties": {
                            "extension": {
                                "type": "string",
                                "description": "File extension (e.g., .sh, .ps1)"
                            },
                            "system": {
                                "type": "string",
                                "enum": [
                                    "windows",
                                    "linux",
                                    "darwin"
                                ],
                                "description": "Operating system"
                            },
                            "command": {
                                "type": "string",
                                "description": "Command to execute files with this extension"
                            },
                            "builtIn": {
                                "type": "boolean",
                                "description": "Indicates if this is a built-in extension mapping",
                                "default": false
                            }
                        }
                    },
                    "default": [],
                    "description": "File extension command mappings",
                    "editPresentation": "multilineJson",
                    "order": 2,
                    "markdownDescription": "File extension command mappings. Click [Manage File Extensions](command:scripts-runner.configureFileExtensions) to open the configuration UI.",
                    "scope": "machine-overridable"
                },
                "scriptsRunner.viewType": {
                    "type": "string",
                    "enum": [
                        "list",
                        "card"
                    ],
                    "default": "card",
                    "description": "Layout type for scripts view",
                    "scope": "machine-overridable"
                }
            }
        },
        "keybindings": [
            {
                "command": "workbench.view.extension.scripts-runner",
                "key": "ctrl+alt+s",
                "when": "true"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./ && ts-node scripts/copy-codicons.ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js",
        "package": "vsce package --allow-missing-repository",
        "clean": "rm -rf out/ dist/ node_modules/ package-lock.json"
    },
    "dependencies": {
        "@vscode/codicons": "^0.0.36",
        "simple-git": "^3.21.0"
    },
    "bundledDependencies": [
        "simple-git",
        "@kwsites/file-exists",
        "@kwsites/promise-deferred",
        "debug",
        "ms",
        "@vscode/codicons"
    ],
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "^16.0.0",
        "@types/vscode": "^1.85.0",
        "@vscode/test-electron": "^2.3.8",
        "@vscode/vsce": "^2.24.0",
        "glob": "^8.0.0",
        "mocha": "^10.2.0",
        "typescript": "^5.0.0",
        "ts-node": "^10.9.2"
    }
}