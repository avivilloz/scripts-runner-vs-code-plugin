{
    "publisher": "scripts-runner",
    "name": "scripts-runner",
    "displayName": "Scripts Runner",
    "description": "Execute scripts from git repository with parameters",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:scriptsExplorer",
        "onCommand:scripts-runner.refresh",
        "onCommand:scripts-runner.execute"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "scripts-runner.refresh",
                "title": "Refresh Scripts",
                "icon": "$(refresh)"
            },
            {
                "command": "scripts-runner.search",
                "title": "Search Scripts",
                "icon": "$(search)"
            },
            {
                "command": "scripts-runner.filter",
                "title": "Filter Scripts",
                "icon": "$(filter)"
            },
            {
                "command": "scripts-runner.clearFilters",
                "title": "Clear Filters",
                "icon": "$(clear-all)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "scripts-runner",
                    "title": "Scripts Runner",
                    "icon": "$(play)"
                }
            ]
        },
        "views": {
            "scripts-runner": [
                {
                    "id": "scriptsExplorer",
                    "name": "Available Scripts"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "scripts-runner.refresh",
                    "when": "view == scriptsExplorer",
                    "group": "navigation"
                },
                {
                    "command": "scripts-runner.search",
                    "when": "view == scriptsExplorer",
                    "group": "navigation"
                },
                {
                    "command": "scripts-runner.filter",
                    "when": "view == scriptsExplorer",
                    "group": "navigation"
                },
                {
                    "command": "scripts-runner.clearFilters",
                    "when": "view == scriptsExplorer && scriptsRunner.hasFilters",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "Scripts Runner",
            "properties": {
                "scriptsRunner.repositoryUrl": {
                    "type": "string",
                    "default": "",
                    "description": "Git repository URL containing scripts"
                },
                "scriptsRunner.scriptsPath": {
                    "type": "string",
                    "default": "scripts",
                    "description": "Path to scripts directory relative to repository root"
                },
                "scriptsRunner.branch": {
                    "type": "string",
                    "default": "",
                    "description": "Git branch to use (leave empty for default branch)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "node ./out/test/runTest.js",
        "pretest": "npm run compile",
        "package": "vsce package"
    },
    "dependencies": {
        "simple-git": "^3.21.0"
    },
    "devDependencies": {
        "@types/node": "^16.0.0",
        "@types/vscode": "^1.85.0",
        "typescript": "^5.0.0",
        "@types/mocha": "^10.0.0",
        "@types/glob": "^8.0.0",
        "mocha": "^10.2.0",
        "glob": "^8.0.0",
        "@vscode/test-electron": "^2.3.8",
        "@vscode/vsce": "^2.24.0"
    }
}