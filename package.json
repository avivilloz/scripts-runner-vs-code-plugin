{
    "publisher": "avivilloz",
    "name": "scripts-runner",
    "displayName": "Scripts Runner",
    "description": "Execute scripts from git repositories with parameters",
    "version": "0.0.15",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/avivilloz/scripts-runner-vs-code-plugin.git"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "scripts-runner.refresh",
                "title": "Refresh Scripts",
                "icon": "$(refresh)"
            },
            {
                "command": "scripts-runner.search",
                "title": "Search Scripts",
                "icon": "$(search)"
            },
            {
                "command": "scripts-runner.filter",
                "title": "Filter Scripts",
                "icon": "$(filter)"
            },
            {
                "command": "scripts-runner.clearFilters",
                "title": "Clear Filters",
                "icon": "$(clear-all)"
            },
            {
                "command": "scripts-runner.enable",
                "title": "Enable Scripts Runner",
                "category": "Scripts Runner"
            },
            {
                "command": "scripts-runner.disable",
                "title": "Disable Scripts Runner",
                "category": "Scripts Runner"
            },
            {
                "command": "scripts-runner.configureSource",
                "title": "Add Source",
                "icon": "$(add)"
            }
        ],
        "viewsContainers": {
            "panel": [
                {
                    "id": "scripts-runner",
                    "title": "Scripts",
                    "icon": "$(play)"
                }
            ]
        },
        "views": {
            "scripts-runner": [
                {
                    "id": "scriptsExplorer",
                    "name": "Scripts"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "scripts-runner.refresh",
                    "when": "view == scriptsExplorer",
                    "group": "navigation"
                },
                {
                    "command": "scripts-runner.search",
                    "when": "view == scriptsExplorer",
                    "group": "navigation"
                },
                {
                    "command": "scripts-runner.filter",
                    "when": "view == scriptsExplorer",
                    "group": "navigation"
                },
                {
                    "command": "scripts-runner.clearFilters",
                    "when": "view == scriptsExplorer && scriptsRunner.hasFilters",
                    "group": "navigation"
                },
                {
                    "command": "scripts-runner.configureSource",
                    "when": "view == scriptsExplorer",
                    "group": "navigation@0"
                }
            ]
        },
        "configuration": {
            "title": "Scripts Runner",
            "properties": {
                "scriptsRunner.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable Scripts Runner"
                },
                "scriptsRunner.sources": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "git",
                                    "local"
                                ],
                                "description": "Type of script source"
                            },
                            "name": {
                                "type": "string",
                                "description": "Display name for the source"
                            },
                            "url": {
                                "type": "string",
                                "description": "Git repository URL (required for git type)"
                            },
                            "branch": {
                                "type": "string",
                                "description": "Git branch name (optional for git type)"
                            },
                            "path": {
                                "type": "string",
                                "description": "Local filesystem path (required for local type)"
                            },
                            "scriptsPath": {
                                "type": "string",
                                "description": "Path to scripts directory within the repository"
                            }
                        }
                    },
                    "default": [],
                    "description": "Script sources configuration"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "node ./out/test/runTest.js",
        "pretest": "npm run compile",
        "package": "vsce package"
    },
    "dependencies": {
        "simple-git": "^3.21.0"
    },
    "bundledDependencies": [
        "simple-git",
        "@kwsites/file-exists",
        "@kwsites/promise-deferred",
        "debug",
        "ms"
    ],
    "devDependencies": {
        "@types/node": "^16.0.0",
        "@types/vscode": "^1.85.0",
        "typescript": "^5.0.0",
        "@types/mocha": "^10.0.0",
        "@types/glob": "^8.0.0",
        "mocha": "^10.2.0",
        "glob": "^8.0.0",
        "@vscode/test-electron": "^2.3.8",
        "@vscode/vsce": "^2.24.0"
    }
}